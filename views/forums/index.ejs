<div class="table">
    <div class="table-row">
      <div class="table-cell">Title</div>
      <div class="table-cell">Author</div>
      <div class="table-cell">Subject</div>
    </div>
  <% forums.forEach(function(forum, i){ %>
    <a class="table-row" href="/forums/<%= forum._id %>">
        <div class="table-cell"><%= forum.title %></div>
        <div class="table-cell"><%= forum.author %></div>
        <div class="table-cell"><%= forum.subject %></div>
    </a>
  <% }) %>
</div>
